{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "es5",
      "es2020"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".build/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "scripts",
    "check_*.ts",
    "bulk_schedule_*.ts",
    "complete_*.ts",
    "create_*.ts",
    "debug_*.ts",
    "finish_*.ts",
    "fix_*.ts",
    "make_*.ts",
    "migrate_*.ts",
    "schedule_*.ts",
    "sync_*.ts",
    "test_*.ts"
  ]
}
